<Page x:Class="FileOrganizer.Views.OrganizarArquivosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileOrganizer.Views" xmlns:vm="clr-namespace:FileOrganizer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Organizar Pasta">
    <Page.DataContext>
        <vm:OrganizarArquivosViewModel/>
    </Page.DataContext>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="Auto"/>
            <!-- opções de organização -->
            <RowDefinition Height="Auto"/>
            <!-- pasta -->
            <RowDefinition/>
            <!-- grid preview -->
            <RowDefinition Height="Auto"/>
            <!-- rodapé -->
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" FontWeight="SemiBold"
                   Text="Organizar Pasta" Margin="0,0,0,12"/>

        <!-- Opções de como organizar -->
        <GroupBox Header="Organizar por:" Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="8">
                <RadioButton Content="Formato"
                 GroupName="OrganizarPor"
                 Margin="0,0,20,0"
                 IsChecked="{Binding PorFormato, Mode=TwoWay}"/>
                <RadioButton Content="Prefixo"
                 GroupName="OrganizarPor"
                 Margin="0,0,20,0"
                 IsChecked="{Binding PorPrefixo, Mode=TwoWay}"/>
                <RadioButton Content="Data Criação"
                 GroupName="OrganizarPor"
                 Margin="0,0,20,0"
                 IsChecked="{Binding PorData, Mode=TwoWay}"/>
            </StackPanel>
        </GroupBox>

        <!-- Seleção de pasta -->
        <GroupBox Header="Pasta" Grid.Row="2">
            <DockPanel Margin="8">
                <TextBox Text="{Binding PastaSelecionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             DockPanel.Dock="Left" Width="520"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Selecionar" Command="{Binding SelecionaPastaCommand}"/>
                    <Button Content="Pré-visualizar" Margin="8,0,0,0" Command="{Binding GerarPreviaCommand}"/>
                </StackPanel>
            </DockPanel>
        </GroupBox>


        <!-- Pré-visualização -->
        <GroupBox Header="Pré-visualização" Grid.Row="3">
            <DataGrid ItemsSource="{Binding ItensPrevia}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Origem"        Binding="{Binding CaminhoOrigem}" Width="2*"/>
                    <DataGridTextColumn Header="Pasta Destino" Binding="{Binding CaminhoDestino}" Width="2*"/>
                    <DataGridTextColumn Header="Arquivo"       Binding="{Binding NomeCompleto}"   Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Botões (Confirmar) -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Confirmar" Width="120" Command="{Binding ConfirmarCommand}"/>
        </StackPanel>
    </Grid>
</Page>
