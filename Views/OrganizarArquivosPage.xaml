<Page x:Class="FileOrganizer.Views.OrganizarArquivosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:FileOrganizer.ViewModels"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Organizar Pasta">

    <Page.DataContext>
        <vm:OrganizarArquivosViewModel/>
    </Page.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="Auto"/>
            <!-- opções -->
            <RowDefinition Height="Auto"/>
            <!-- pasta -->
            <RowDefinition/>
            <!-- grid -->
            <RowDefinition Height="Auto" MinHeight="44"/>
            <!-- rodapé -->
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Text="Organizar Pasta"
               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
               Margin="0,0,0,12"/>

        <!-- ORGANIZAR POR -->
        <materialDesign:Card Grid.Row="1"
                         Padding="12"
                         Margin="0,0,0,8"
                         Background="White"
                         UniformCornerRadius="12">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Organizar por:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="Formato"
                       GroupName="OrganizarPor"
                       Margin="0,0,20,0"
                       IsChecked="{Binding PorFormato, Mode=TwoWay}"/>
                    <RadioButton Content="Prefixo"
                       GroupName="OrganizarPor"
                       Margin="0,0,20,0"
                       IsChecked="{Binding PorPrefixo, Mode=TwoWay}"/>
                    <RadioButton Content="Data Criação"
                       GroupName="OrganizarPor"
                       Margin="0,0,20,0"
                       IsChecked="{Binding PorData, Mode=TwoWay}"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- PASTA -->
        <materialDesign:Card Grid.Row="2"
                         Padding="12"
                         Margin="0,8,0,181"
                         Background="White"
                         UniformCornerRadius="12" Grid.RowSpan="2">
            <DockPanel>
                <TextBox DockPanel.Dock="Left"
                 Width="520"
                 Text="{Binding PastaSelecionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Pasta"
                 Margin="0,0,12,0"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Selecionar"
                  Command="{Binding SelecionaPastaCommand}"
                  Style="{StaticResource MaterialDesignRaisedButton}"/>
                    <Button Content="Pré-visualizar"
                  Margin="8,0,0,0"
                  Command="{Binding GerarPreviaCommand}"
                  Style="{StaticResource MaterialDesignOutlinedButton}"
                  Foreground="{DynamicResource SecondaryHueMidBrush}"
                  BorderBrush="{DynamicResource SecondaryHueMidBrush}"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- PRÉ-VISUALIZAÇÃO -->
        <materialDesign:Card Grid.Row="3"
                         Padding="12"
                         Margin="0,8,0,0"
                         Background="White"
                         UniformCornerRadius="12">
            <StackPanel>
                <TextBlock Text="Pré-visualização" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <DataGrid ItemsSource="{Binding ItensPrevia}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="White"
                  BorderThickness="0"
                  GridLinesVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Origem"        Binding="{Binding CaminhoOrigem}"  Width="2*"/>
                        <DataGridTextColumn Header="Pasta Destino" Binding="{Binding CaminhoDestino}" Width="2*"/>
                        <DataGridTextColumn Header="Arquivo"       Binding="{Binding NomeCompleto}"   Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </materialDesign:Card>

        <!-- RODAPÉ -->
        <StackPanel Grid.Row="4"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,12,0,0" Width="120">
            <Button Content="Confirmar"
              Width="120"
              Command="{Binding ConfirmarCommand}"
              Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Page>
