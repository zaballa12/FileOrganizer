<Page x:Class="FileOrganizer.Views.RenomearArquivosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileOrganizer.Views" xmlns:vm="clr-namespace:FileOrganizer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Renomear em Lote">
    <!-- DataContext -->
    <Page.DataContext>
        <vm:OrganizarArquivosViewModel/>
    </Page.DataContext>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <!-- rodapé (Confirmar) -->
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" FontWeight="SemiBold" Text="Renomear em Lote" Margin="0,0,0,12"/>

        <GroupBox Header="Prefixo e Sufixo" Grid.Row="1">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PREFIXO -->
                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Prefixo" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="CmbPrefixoTipo"
                                  Width="200"
                                  SelectedValuePath="Content"
                                  SelectedValue="Tipo">
                            <ComboBoxItem Content="Número"/>
                            <ComboBoxItem Content="Tipo"/>
                            <ComboBoxItem Content="Texto"/>
                        </ComboBox>

                        <!-- só aparece se for Texto -->
                        <TextBox x:Name="TxtPrefixoTexto"
                                 Width="120"
                                 Height="22"
                                 Margin="6,0,0,0"
                                 ToolTip="Texto do prefixo quando o tipo for 'Texto'">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedValue, ElementName=CmbPrefixoTipo}"
                                                     Value="Texto">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>
                </StackPanel>

                <!-- SUFIXO -->
                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock Text="Sufixo" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="CmbSufixoTipo"
                                  Width="200"
                                  SelectedValuePath="Content"
                                  SelectedValue="Número">
                            <ComboBoxItem Content="Número"/>
                            <ComboBoxItem Content="Tipo"/>
                            <ComboBoxItem Content="Texto"/>
                        </ComboBox>

                        <!-- só aparece se for Texto -->
                        <TextBox x:Name="TxtSufixoTexto"
                                 Width="120"
                                 Height="22"
                                 Margin="6,0,0,0"
                                 ToolTip="Texto do sufixo quando o tipo for 'Texto'">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedValue, ElementName=CmbSufixoTipo}"
                                                     Value="Texto">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>


        <GroupBox Header="Pasta" Grid.Row="2">
            <DockPanel Margin="8">
                <TextBox
                Text="{Binding PastaSelecionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DockPanel.Dock="Left" Width="520"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Selecionar" Command="{Binding ComandoSelecionarPasta}"/>
                    <Button Content="Organizar" Margin="8,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </GroupBox>
        
        <!-- Pré-visualização -->
        <GroupBox Header="Pré-visualização" Grid.Row="3">
            <DataGrid x:Name="GridPreviewRename">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome Atual" Binding="{Binding NomeAtual}" Width="2*"/>
                    <DataGridTextColumn Header="Novo Nome" Binding="{Binding NovoNome}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <!-- Rodapé -->
        <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Confirmar" Width="120"/>
        </StackPanel>
    </Grid>
</Page>
