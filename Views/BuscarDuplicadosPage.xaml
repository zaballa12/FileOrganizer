<Page x:Class="FileOrganizer.Views.BuscarDuplicadosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Procurar Arquivos Duplicados">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="Auto"/>
            <!-- critérios -->
            <RowDefinition Height="Auto"/>
            <!-- pasta -->
            <RowDefinition/>
            <!-- grid -->
            <RowDefinition Height="Auto"/>
            <!-- rodapé -->
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Text="Procurar Arquivos Duplicados"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,12"/>

        <!-- CRITÉRIOS -->
        <materialDesign:Card Grid.Row="1"
                             Padding="12"
                             Margin="0,0,0,8"
                             Background="White"
                             UniformCornerRadius="12">
            <StackPanel>
                <TextBlock Text="Critérios" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <WrapPanel>
                    <TextBlock Text="Identificar por:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <CheckBox Content="Nome"
                              IsChecked="{Binding PorNome}"
                              Margin="0,0,20,0"/>
                    <CheckBox Content="Conteúdo"
                              IsChecked="{Binding PorConteudo}"
                              Margin="0,0,20,0"/>
                </WrapPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- SELEÇÃO DE PASTA -->
        <materialDesign:Card Grid.Row="2"
                             Padding="12"
                             Margin="0,8,0,0"
                             Background="White"
                             UniformCornerRadius="12">
            <DockPanel>
                <TextBox DockPanel.Dock="Left"
                         Width="520"
                         Text="{Binding PastaSelecionada, Mode=TwoWay}"
                         IsReadOnly="True"
                         materialDesign:HintAssist.Hint="Pasta para varredura"
                         Margin="0,0,12,0"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Selecionar"
                            Command="{Binding SelecionarPastaCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                    <Button Content="Pesquisar"
                            Margin="8,0,0,0"
                            Command="{Binding PesquisarCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="{DynamicResource SecondaryHueMidBrush}"
                            BorderBrush="{DynamicResource SecondaryHueMidBrush}"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- RESULTADOS -->
        <materialDesign:Card Grid.Row="3"
                             Padding="12"
                             Margin="0,8,0,0"
                             Background="White"
                             UniformCornerRadius="12">
            <StackPanel>
                <TextBlock Text="Possíveis Duplicados" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <DataGrid ItemsSource="{Binding Itens}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Background="White"
                          BorderThickness="0"
                          GridLinesVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Sel." Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Selecionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              ClickMode="Press"
                                              HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background"   Value="Transparent"/>
                                    <Setter Property="BorderBrush"  Value="Transparent"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background"  Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Caminho"  Binding="{Binding Caminho}"      Width="3*"/>
                        <DataGridTextColumn Header="Arquivo"  Binding="{Binding Nome}"         Width="2*"/>
                        <DataGridTextColumn Header="Tamanho"  Binding="{Binding Tamanho}"      Width="*"/>
                        <DataGridTextColumn Header="Critério" Binding="{Binding GrupoRotulo}"  Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </materialDesign:Card>

        <!-- RODAPÉ -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <Button Content="Excluir Selecionados"
                    Command="{Binding ExcluirSelecionadosCommand}"
                    IsEnabled="{Binding TemSelecionado}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Page>
