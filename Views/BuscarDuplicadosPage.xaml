<Page x:Class="FileOrganizer.Views.BuscarDuplicadosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileOrganizer.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     Title="Procurar Arquivos Duplicados">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" FontWeight="SemiBold" Text="Procurar Arquivos Duplicados" Margin="0,0,0,12"/>

        <GroupBox Header="Critérios" Grid.Row="1">
            <StackPanel Margin="8">
                <WrapPanel>
                    <TextBlock Text="Identificar por:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <CheckBox Content="Nome"
                              IsChecked="{Binding PorNome}"
                              Margin="0,0,20,0"/>
                    <CheckBox Content="Conteúdo"
                              IsChecked="{Binding PorConteudo}"
                              Margin="0,0,20,0"/>
                </WrapPanel>

                <DockPanel Margin="0,8,0,0">
                    <TextBox DockPanel.Dock="Left" Width="520"
                             Text="{Binding PastaSelecionada}"
                             IsReadOnly="True"
                             ToolTip="Caminho da pasta para varredura"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button Content="Selecionar"
                                Command="{Binding SelecionarPastaCommand}"/>
                        <Button Content="Pesquisar" Margin="8,0,0,0"
                                Command="{Binding PesquisarCommand}"/>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Possíveis Duplicados" Grid.Row="2">
            <DataGrid ItemsSource="{Binding Itens}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Sel.">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Selecionado, Mode=TwoWay}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.Width>40</DataGridTemplateColumn.Width>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Caminho" Binding="{Binding Caminho}" Width="3*"/>
                    <DataGridTextColumn Header="Arquivo" Binding="{Binding Nome}" Width="2*"/>
                    <DataGridTextColumn Header="Tamanho" Binding="{Binding Tamanho}" Width="*"/>
                    <DataGridTextColumn Header="Critério" Binding="{Binding GrupoRotulo}" Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Excluir Selecionados"/>
        </StackPanel>
    </Grid>
</Page>
